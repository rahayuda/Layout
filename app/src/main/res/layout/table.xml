<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:stretchColumns="1"
    android:background="@drawable/page_background">

    <TableRow
        android:background="#22ff">
        <TextView
            android:layout_column="1"
            android:text="Open..."
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:text="Ctrl-O"
            android:gravity="right"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
    </TableRow>

    <TableRow android:background="#22ff">
        <TextView
            android:layout_column="1"
            android:text="Save..."
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:text="Ctrl-S"
            android:gravity="right"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
    </TableRow>

    <TableRow android:background="#22ff">
        <TextView
            android:layout_column="1"
            android:text="Save As..."
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:text="Ctrl-Shift-S"
            android:gravity="right"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow android:background="#B6B5A7">
        <TextView
            android:text="X"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:text="Import..."
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
    </TableRow>

    <TableRow android:background="#B6B5A7">
        <TextView
            android:text="X"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:text="Export..."
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
        <TextView
            android:text="Ctrl-E"
            android:gravity="right"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
    </TableRow>

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableRow android:background="#A9A9CA">
        <TextView
            android:layout_column="1"android:text="Quit"
            android:padding="3dip"
            android:textColor="@color/curve_dream"
            android:textSize="14sp"
            android:fontFamily="@font/alata"/>
    </TableRow>

</TableLayout>